OUTPUT = a.out
LD = -L/usr/local/lib/
LIBS = -lboost_serialization -lboost_program_options -lboost_thread -lboost_system
LIBS2 = ${LIBS} -ligraph
OBJ = KirbyAgent.o KnowledgeBase.o Rule.o Element.o Dictionary.o IndexFactory.o Prefices.o LogBox.o Parameters.o MT19937.o
ID = -I/usr/local/include/igraph
OBJ2 = ${OBJ} NetWorld.o LEILAParameters.o
HD = Distance.hpp

LDM = -L/usr/local/lib
LIBSM = -lboost_serialization -lboost_program_options -lboost_thread
LIBS3 = ${LIBSM} -ligraph
OBJ = KirbyAgent.o KnowledgeBase.o Rule.o Element.o Dictionary.o IndexFactory.o Prefices.o LogBox.o Parameters.o MT19937.o LEILA_main.o
IDM = -I/usr/local/include/igraph
CXX = g++
OPT = -O3
#OPT = -g -O0

la: ${OBJ2}
	${CXX} ${OPT} ${ID} ${OBJ2} ${LD} ${LIBS2} -o leila.exe 

lag: ${OBJ2}
	${CXX} ${OPT} ${ID} ${LD} ${LIBS2} LEILA_main.o ${OBJ2} ${HD} -o leila.exe 

la_mac: ${OBJ2}
	${CXX} ${OPT} ${IDM} LEILA_main.o ${OBJ2} ${LDM} ${LIBS3} -o leila.exe

ka: ${OBJ}
	${CXX} ${OPT} LEIKA_main.o ${OBJ} ${HD} ${LD} ${LIBS} -o leika.exe

#.cpp.o:
#	${CXX} ${OPT} -c $< ${ID} ${LD} ${LIBS2}
.cpp.o:
	${CXX} ${OPT} -c $< ${ID}



Kirby_main.o:Parameters.o Kirby_main.h
KirbyAgent.o: KnowledgeBase.o LogBox.o KirbyAgent.h
KnowledgeBase.o: Rule.o IndexFactory.o Prefices.o LogBox.o KnowledgeBase.h
Rule.o: Element.o Dictionary.o IndexFactory.o Prefices.o Rule.h
Element.o:Dictionary.o IndexFactory.o Prefices.o Element.h
Dictionary.o:Dictionary.h
IndexFactory.o:IndexFactory.h
Prefices.o:Prefices.h
LogBox.o:LogBox.h
MT19937.o:MT19937.h
Parameters.o:Parameters.h
LEILA_main.o: KirbyAgent.o LogBox.o NetWorld.o LEILAParameters.o MT19937.o LEILA_main.h

clean:
	rm -f *.o *.dump *.exe *.gch *.stackdump
